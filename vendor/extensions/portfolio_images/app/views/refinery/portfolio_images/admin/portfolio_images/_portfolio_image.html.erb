<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(portfolio_image) -%>">
  <span class='title'>
    <%= portfolio_image.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.portfolio_images_portfolio_image_path(portfolio_image),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_portfolio_images_admin_portfolio_image_path(portfolio_image),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.portfolio_images_admin_portfolio_image_path(portfolio_image),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => portfolio_image.title),
        :method => :delete %>
  </span>
</li>
