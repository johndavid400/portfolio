<ul>
  <% if ::Refinery::PortfolioImages::Admin::PortfolioImagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.portfolio_images_admin_portfolio_images_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_portfolio_images_admin_portfolio_image_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::PortfolioImages::Admin::PortfolioImagesController.sortable? && ::Refinery::PortfolioImages::PortfolioImage.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Portfolio Images"),
                 refinery.portfolio_images_admin_portfolio_images_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Portfolio Images"),
                 refinery.portfolio_images_admin_portfolio_images_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
