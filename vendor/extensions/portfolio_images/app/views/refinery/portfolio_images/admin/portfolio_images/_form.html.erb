<%= form_for [refinery, :portfolio_images_admin, @portfolio_image] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @portfolio_image,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @portfolio_image.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :category_id -%>
    <%= f.select :category_id, options_from_collection_for_select(Refinery::Categories::Category.all, :id, :title, @portfolio_image.category_id), :include_blank => true -%>
  </div>

  <div class='field'>
    <%= f.label :client_id -%>
    <%= f.select :client_id, options_from_collection_for_select(Refinery::Clients::Client.all, :id, :title, @portfolio_image.client_id), :include_blank => true -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.portfolio_images.admin.portfolio_images.portfolio_image'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @portfolio_image.title) -%>
<% end -%>
