- content_for :body_content_title do
  = @client.title
  %ul.large-block-grid-5
    - @client.images.each do |image|
      %li= link_to image_tag(image.thumb, :class => "imgshadow"), image.medium, :title => image_url(image), :rel => "lightbox[#{@client.title}]"


- content_for :side_body do
  .row
    %hr
    %aside
      .row
        .large-12.columns
          %h2= t('.other')
          %ul
            - @clients.each do |client|
              %li.inline.link
                = link_to client.title, refinery.clients_client_path(client)
                = "|" unless client == @clients.last

= render '/refinery/content_page'
