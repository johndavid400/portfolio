<% content_for :body_content_title do %>
  <%= @client.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @client.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @client.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="clients">
      <% @clients.each do |client| %>
        <li>
          <%= link_to client.title, refinery.clients_client_path(client) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
