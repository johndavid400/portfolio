- content_for :body_content_title do
  = @category.title
  %ul.large-block-grid-5
    - @category.images.each do |image|
      %li= link_to image_tag(image.thumb, :class => "imgshadow"), image.medium, :title => image.title, :rel => "lightbox[#{@category.title}]"


- content_for :side_body do
  .row
    %hr
    %aside
      .row
        .large-4.columns
          %h2= t('.other')
          - @categories.each do |category|
            = link_to category.title, refinery.categories_category_path(category), :class => "button small secondary"

= render '/refinery/content_page'
