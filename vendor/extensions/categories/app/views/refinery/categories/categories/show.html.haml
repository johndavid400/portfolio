- content_for :body_content_title do
  = @category.title
  %ul.large-block-grid-5
    - @category.images.each do |image|
      %li= link_to image_tag(image.thumb, :class => "imgshadow"), image.medium, :title => image_url(image), :rel => "lightbox[#{@category.title}]"


- content_for :side_body do
  .row
    %hr
    %aside
      .row
        .large-12.columns
          %h2= t('.other')
          %ul
            - @categories.each do |category|
              %li.inline.link
                = link_to category.title, refinery.categories_category_path(category)
                = "|" unless category == @categories.last

= render '/refinery/content_page'
