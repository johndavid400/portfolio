- content_for :body do
  .row
    - @categories.each do |category|
      - if category.images.present?
        %hr
        %h3= link_to category.title, refinery.categories_category_path(category)
        %ul.large-block-grid-5
          - category.images.each do |image|
            %li= link_to image_tag(image.thumb, :class => "imgshadow"), image.medium, :title => image.title, :rel => "lightbox[#{category.title}]"

= render '/refinery/content_page'
