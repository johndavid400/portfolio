%p
.row.panel.callout
  .small-10.small-centered.columns
    %h2 Melissa Warren's Graphics Design Projects

%ul.small-block-grid-4
  - @projects.each do |project|
    - if project.attachment?
      %li.project
        = link_to image_tag(project.attachment.url(:thumb)), project.attachment.url(:large), title: "<a href='#{project.attachment.url}'>view full size image</a>", :rel => "lightbox[project]"

