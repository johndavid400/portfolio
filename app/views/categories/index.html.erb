<h1 class="left" >Categories Index</h1>
<%= link_to 'New Category', new_category_path, :class => "button small secondary right" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td width="100px"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td width="100px"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "button small secondary" %>
